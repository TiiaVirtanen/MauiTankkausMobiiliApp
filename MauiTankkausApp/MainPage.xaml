<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTankkausApp.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Frame HorizontalOptions="Fill" Padding="10" BackgroundColor="Black">
                <Label Text="TankkausApp" HorizontalTextAlignment="Center" FontSize="28" TextColor="White"></Label>
            </Frame>

            <Image Source="opel.jpg" />

            <StackLayout Padding="30,15">
                <Entry x:Name="inputKentta1" Placeholder="Rekisterinumero" />
                <Entry x:Name="inputKentta2" Placeholder="Ajokilometrit" />
                <Entry x:Name="inputKentta3" Placeholder="Litraa" />
                <Entry x:Name="inputKentta4" Placeholder="Euroa" />
                <Button x:Name="Lisaa" BackgroundColor="Black" TextColor="White" FontSize="18" Text="Lisää" HorizontalOptions="Fill" Clicked="Lisaa_Clicked"></Button>
            </StackLayout>

            <Label Text="Viimeisimmät tankkaukset:" TextColor="Black" HorizontalOptions="Center" FontSize="20"></Label>

            <Label x:Name="tanklataus" HorizontalOptions="Center"></Label>

            <ListView x:Name="tankList" SelectionMode="Single" Margin="20, 0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <ContentView Padding="3">
                                <Frame Padding="2">

                                    <StackLayout Orientation="Horizontal" Padding="0, 2">

                                        <Label Text="{Binding Rekisterinumero}"
                                        TextColor="Black"
                                        FontSize="16"
                                        VerticalOptions="StartAndExpand" 
                                        Margin="5, 0, 0, 0"/>
                                        <Label Text=" |" TextColor="Black" FontSize="18"/>

                                        <Label Text="{Binding Ajokilometrit}"
                                        TextColor="Black"
                                        FontSize="16"
                                        VerticalOptions="StartAndExpand"
                                        Margin="5, 0, 0, 0"/>
                                        <Label Text=" km |" TextColor="Black" FontSize="18"/>

                                        <Label Text="{Binding Litraa}"
                                        TextColor="Black"
                                        FontSize="16"
                                        VerticalOptions="StartAndExpand"
                                        Margin="5, 0, 0, 0"/>
                                        <Label Text=" l |" TextColor="Black" FontSize="18"/>

                                        <Label Text="{Binding Euroa}"
                                        TextColor="Black"
                                        FontSize="16"
                                        VerticalOptions="StartAndExpand"
                                        HorizontalOptions="Center"
                                        Margin="5, 0, 0, 0"/>
                                        <Label Text=" €" TextColor="Black" FontSize="18"/>

                                    </StackLayout>
                                </Frame>
                            </ContentView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
